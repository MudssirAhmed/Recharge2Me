<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/planCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="10"
    android:layout_marginVertical="12dp"
    android:paddingHorizontal="8dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_planAmount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingVertical="4dp"
        android:textColor="@color/primaryText"
        android:background="@drawable/round_shadow"
        android:fontFamily="@font/comfortaa_bold"
        android:gravity="center"
        android:text="₹73"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="7"
        android:layout_marginStart="16dp">

        <TextView
            android:id="@+id/tv_planValidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_bold"
            tools:text="Validity: 89 days"
            android:textSize="14sp"
            android:textColor="@color/primaryText" />

        <TextView
            android:id="@+id/tvPlanTalkTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_bold"
            tools:text="Talktime: ₹89"
            android:textSize="14sp"
            android:textColor="@color/primaryText" />

        <TextView
            android:id="@+id/tv_planDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/comfortaa_regular"
            tools:text="Get 1 YEAR ZEE5 Premium access +2GB\/D+UL Calls+100SMS\/D valid for 84 days. Limited Period Offer"
            android:textColor="@color/lightText"
            android:textSize="12sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/btn_planSelect"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:padding="12dp"
        android:layout_weight="1"
        android:src="@drawable/right_arrow"
        app:tint="@color/primaryText" />

</LinearLayout>