<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.ui.activities.PolicyActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/comfortaa_bold"
            android:gravity="center"
            android:text="Refund and Cancellation Policy"
            android:textColor="@color/primaryText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/RefundAndCancelation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/lightText"
            android:fontFamily="@font/comfortaa_light"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView20" />

        <TextView
            android:id="@+id/TermsAndConditions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Terms And Conditions"
            android:textSize="18sp"
            android:gravity="center"
            android:textColor="@color/primaryText"
            android:fontFamily="@font/comfortaa_bold"
            app:layout_constraintTop_toBottomOf="@id/RefundAndCancelation"

            />

        <TextView
            android:id="@+id/tv_TAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/lightText"
            android:fontFamily="@font/comfortaa_light"
            app:layout_constraintTop_toBottomOf="@id/TermsAndConditions"
            />

        <TextView
            android:id="@+id/privacyPolicy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Privacy Policy"
            android:gravity="center"
            android:textColor="@color/primaryText"
            android:textSize="18sp"
            android:fontFamily="@font/comfortaa_bold"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_TAC"
            />

        <TextView
            android:id="@+id/tv_PP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/lightText"
            android:fontFamily="@font/comfortaa_light"
            app:layout_constraintTop_toBottomOf="@id/privacyPolicy"
            />

        <CheckBox
            android:id="@+id/cb_PP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:buttonTint="@color/colorPrimaryDark"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Read and Accept All Privcy Policies"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_PP" />

        <CheckBox
            android:id="@+id/cb_TAC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:buttonTint="@color/colorPrimaryDark"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Read and Accept All Terms and Conditions"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_PP" />

        <CheckBox
            android:id="@+id/cb_RCP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:buttonTint="@color/colorPrimaryDark"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Read and Accept All Refund and Cancellation Policy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cb_TAC" />

        <Button
            android:id="@+id/btn_policiesAgree"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/save_btn"
            android:fontFamily="@font/comfortaa_bold"
            android:text="Agree"
            android:textAllCaps="false"
            android:textColor="@color/whiteText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cb_RCP" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>